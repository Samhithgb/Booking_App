<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/blr4"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.samhith.book_your_show.SignUp"
    android:id="@+id/rl2">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:id="@+id/t2"
        android:textSize="@dimen/abc_action_bar_stacked_max_height"
        android:typeface="monospace"
        android:textStyle="bold"
        android:fontFamily="@string/app_name"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:hint="Name"
        android:textColorHint="#FFFFFF"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="match_parent"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:id="@+id/editText3"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColorHint="#FFFFFF"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/editText" />

    <EditText
        android:layout_width="match_parent"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:id="@+id/editText4"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorHint="#FFFFFF"
        android:layout_centerVertical="true"
        android:layout_below="@+id/editText3"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="match_parent"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:id="@+id/editText5"
        android:hint="Re-Type Password"
        android:inputType="textPassword"
        android:textColorHint="#FFFFFF"
        android:layout_centerVertical="true"
        android:layout_below="@+id/editText4"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/but1"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:gravity="center"

        android:background="@drawable/nice_button"

        android:text="Sign Up"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:shadowRadius="1"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowColor="@android:color/black"
        android:layout_below="@+id/editText5"
        android:layout_alignParentEnd="true"></Button>


</RelativeLayout>
